					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"notebookPath": "/Users/saoud.akram@elca.ch/Hello World"
				},
				"linkedServiceName": {
					"referenceName": "linkedServiceAzureDatabricks",
					"type": "LinkedServiceReference"
				}
			},
			{
				"name": "Failed Notebook run",
				"type": "Fail",
				"dependsOn": [
					{
						"activity": "NB - Hello World",
						"dependencyConditions": [
							"Failed"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
